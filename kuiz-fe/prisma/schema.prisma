generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Admin {
  id        String   @id
  email     String   @unique
  name      String?
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime
  Quiz      Quiz[]
}

model Question {
  id         String     @id
  text       String
  difficulty Difficulty
  options    Json?
  answer     Int?
  quizId     String
  createdAt  DateTime   @default(now())
  updatedAt  DateTime
  Quiz       Quiz       @relation(fields: [quizId], references: [id])

  @@index([quizId])
}

model Quiz {
  id          String        @id
  title       String
  description String?
  adminId     String
  createdAt   DateTime      @default(now())
  updatedAt   DateTime
  Question    Question[]
  Admin       Admin         @relation(fields: [adminId], references: [id])
  QuizAttempt QuizAttempt[]
}

model QuizAttempt {
  id          String   @id
  userId      String
  quizId      String
  score       Int
  attemptedAt DateTime @default(now())
  Quiz        Quiz     @relation(fields: [quizId], references: [id])
  User        User     @relation(fields: [userId], references: [id])

  @@unique([userId, quizId])
  @@index([quizId])
  @@index([userId])
}

model User {
  id              String        @id
  email           String        @unique
  name            String?
  password        String
  passwordChanged Boolean       @default(false)
  createdAt       DateTime      @default(now())
  updatedAt       DateTime
  QuizAttempt     QuizAttempt[]
}

enum Difficulty {
  EASY
  MEDIUM
  HARD
}
